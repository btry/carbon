<div class="card-body carbon-emission-card" style="height: 100%">
    <div class="row align-items-center">
        <div class="col-auto" id="carbonEmissionIconElement">
            <span><img src="{{ get_plugin_web_dir('carbon') }}/dist/images/carbon_emission_icon_darkgreen.png"></img></span>
        </div>
        <div class="col">
            <div class="subheader">{{ __('Total Carbon Emission', 'carbon') }}</div>
            <div class="subheader">{{ __('May 2023 - April 2024', 'carbon') }}</div>
        </div>
        <div class="my-3 nb-carbon-emission-size text-center" id="carbonEmission"></div>
    </div>
</div>

{% block scripts %}
    <script>
        $(document).ready(function() {

            fetch(CFG_GLPI['root_doc'] + "/" + GLPI_PLUGINS_PATH.carbon + "/ajax/Dashboard/totalCarbonEmission.php").then(response => {
                console.log(response);
                return response.json();
            }).then(data => {
                let totalCarbonEmission = data;
                document.getElementById('carbonEmission').innerHTML = totalCarbonEmission + "<sub>2</sub>";
            });

        });
    </script>
{% endblock %}
