<style>
    #{{ id }} {
        background-color: {{ color }};
        color: {{ fg_color }};
    }

    #{{ id }}:hover {
        background-color: {{ fg_hover_color }};
        border: 1px solid {{ fg_hover_border }};
    }

    .theme-dark #{{ id }} {
        background-color: {{ fg_color }};
        color: {{ color }};
    }

    .theme-dark #{{ id }}:hover {
        background-color: {{ fg_hover_color }};
        color: {{ fg_color }};
        border: 1px solid {{ fg_hover_border }};
    }

    #{{ id }} .apexcharts-title-text {
        fill: {{ fg_color }};
    }

    .theme-dark #{{ id }} .apexcharts-title-text {
        fill: {{ dark_fg_color }};
    }
</style>
<div class="card" id="{{ id }}">
    <div id="carbonEmissionPerModelChart" class="card-body card-max-height">
    <div class="h1 mb-3" id="carbonEmissionPerModel"></div>
    <div class="chart-lg"></div>
    </div>
</div>

{% block scripts %}
<script>
	$(document).ready(function () {
      var carbonEmissionPerModelChart = new ApexCharts(document.querySelector("#carbonEmissionPerModelChart .chart-lg"), {{ data|json_encode(constant('JSON_PRETTY_PRINT'))|raw }});
      carbonEmissionPerModelChart.render();
   });
</script>
{% endblock %}
