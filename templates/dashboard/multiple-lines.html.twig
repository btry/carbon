<style>
    #{{ chart_id }} {
        background-color: {{ color }};
        color: {{ fg_color }};
    }

    .theme-dark #{{ chart_id }} {
        background-color: {{ dark_bg_color }};
        color: {{ dark_fg_color }};
    }

    #{{ chart_id }} .ct-label {
        color: {{ fg_color }};
    }

    .theme-dark #{{ chart_id }} .ct-label {
        color: {{ dark_fg_color }};
    }

    #{{ chart_id }} .ct-grid {
        stroke: {{ line_color }};
    }

    .theme-dark #{{ chart_id }} .ct-grid {
        stroke: {{ dark_line_color}};
    }

    #{{ chart_id }} .ct-circle {
        stroke: {{ color }};
        stroke-width: 3;
    }
    #{{ chart_id }} .ct-circle + .ct-label {
        stroke: {{ color }};
    }
    {{ palette_style }}
</style>

<div style="height: 100%">
    <div class="card g-chart {{ class }}"
        id="{{ chart_id }}">
        <div class="chart ct-chart"></div>
        <span class="main-label {{ label_class }}">{{ chart_title }}</span>
        <i class="main-icon {{ icon }}"></i>
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        var chart = new ApexCharts(document.querySelector("#{{ chart_id }}"), {
            chart: {
                height: "80%",
                type: "{{ chart_type }}",
            },
            // title: {
            //     text: "{{ chart_title }}",
            // },
            legend: {
                show: {{ show_legend ? 'true' : 'false' }},
            },
            series: {{ series|raw }},
            xaxis: {
                categories: {{ categories|raw }},
            },
            yaxis: {{ yaxis|raw }},
            stroke: {{ stroke|raw }}
        });

        chart.render();
    });
</script>
