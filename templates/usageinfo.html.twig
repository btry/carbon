{% extends "generic_show_form.html.twig" %}
{% import "components/form/fields_macros.html.twig" as fields %}

{% block form_fields %}
    {% if item.fields['itemtype'] == 'Computer' %}
        {{ fields.largeTitle(
            __('Asset usage', 'carbon'),
            'fas fa-calendar-days'
        ) }}

        {{ fields.smallTitle(__('Usage information', 'carbon')) }}
        {{ fields.dropdownField(
            '\\GlpiPlugin\\Carbon\\ComputerUsageProfile',
            'plugin_carbon_computerusageprofiles_id',
            item.fields['plugin_carbon_computerusageprofiles_id'],
            _n('Usage profile', 'Usage profiles', 1, 'carbon'))
        }}
    {% endif %}


    {{ fields.numberField(
        'planned_lifespan',
        item.fields['planned_lifespan'],
        __('Planned lifespan (in months)', 'carbon'),
        {
            display_emptychoice: true,
            min: 0,
        })
    }}
{% endblock %}